@using Superheroes.Web.ViewModels
@model EditSuperheroViewModel

<h2>Редактирование супергероя</h2>
<hr />
@if (Model != null)
{
<div class="row">
    <div class="col-md-8" style="width:100%">
        <section id="heroForm">
            @using (Html.BeginForm("Edit", "Superheroes", new { id = ViewBag.SuperheroId }, FormMethod.Post,
                new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Details, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Details, new { @class = "form-control", rows = 5 })
                        @Html.ValidationMessageFor(m => m.Details, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.HeroLevel, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.HeroLevel, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.HeroLevel, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PictureFile, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PictureFile, new { type = "file" })
                        @Html.ValidationMessageFor(m => m.PictureFile, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10" style="margin-top:50px">
                        <input type="submit" value="Сохранить" class="btn btn-danger" />
                        <a href='@Url.Action("Details", new { id = ViewBag.SuperheroId })' type="submit" value="Отмена" class="btn btn-default">Отмена</a>
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                    </div>
                </div>
            }
        </section>
    </div>
</div>
}
else
{
    <h3 class="hero-details">
        Супергерой с указанным идентификатором не найден!
    </h3>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



